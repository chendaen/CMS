
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBusiness.cshtml";
}

<h2>金融管理</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>卡充值</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.Label("卡号:", new { @class = "col-md-1" })
            <div class="col-md-3">
                @Html.Editor("卡编号")
            </div>
            <div class="col-md-1">
                @Html.ActionLink("卡充值","CardList")
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("      读 卡", "CardList",new { @class= "col-md-10" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}